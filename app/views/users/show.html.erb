<% if @current_user %>
<div class="report_heading_wrapper">
	<div class="report_heading_title">
		<%= render "shared/heading", title: "Dashboard" %>
	</div>

	<div class="report_heading_buttons">
    <%= link_to "Logout of your Account", logout_path, method: :delete, class: "button_back" %>
  </div>
</div>
<hr>
  <h3>(Logged in as <%= @current_user.user_name %>)</h3>

  <%= link_to "New Property Search", new_property_path %>
  <br>
  <br>
  <%= link_to "My Favorites", favorites_path %>
  <br>
  <%= link_to "My Reports", reports_path %>
  <br>
  <br>
  <%= link_to "Edit Profile", edit_user_path(@current_user) %>
